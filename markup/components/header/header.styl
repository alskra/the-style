.header
  display table-row
  height 0

  &__inner
    &_1
      padding 5px 0
      background #ffffff

  &__logo
    display block
    width 92px
    margin 0 15px 0 0

  &__logo-img
    display block
    width 100%

  &__select-language
    float right
    color #6d6d6d
    font-size 10px
    line-height 19px
    text-transform uppercase
    margin 15px 0
    .dropdown-toggle
      font-weight 700
      &:hover, &:focus
        color $red-1
    .dropdown-menu
      font-weight 700
      min-width 0
      > li > a
        padding 3px 5px

  &__nav
    color black
    font-weight 700
    line-height 19px
    text-align center
    font-family 'zero-width'
    margin 15px 0

  &__nav-item
    display inline-block
    vertical-align top
    color inherit
    text-decoration none
    font-family $font-family-base
    margin 0 12px
    &:hover, &:focus, &_current
      color $red-1
      text-decoration none

  &__search
    float right
    overflow hidden
    font-family 'zero-width'
    margin 15px 35px 15px 0

  &__search-inner
    display inline-block
    vertical-align top
    overflow hidden
    width 0
    height 19px
    transition 0.2s linear
    &_opened
      width 140px

  input&__search-field
    display block
    box-sizing border-box
    font 300 13px/19px $font-family-base
    color #858585
    width 100%
    height 19px
    padding 0 5px
    background-color white
    border 1px solid #eee
    transition $transition-base
    &::placeholder
      color #858585
    &:focus
      outline 0

  &__search-btn
    vertical-align top
    color #231f20
    font-size 17px
    line-height 19px
    width 19px
    height 19px

