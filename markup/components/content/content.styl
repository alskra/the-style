.content
  display table-row
  height 100%

  &__inner
    padding 30px 0
    background #f6f6f6

  &__view
    text-align center
    color #252525
    margin-bottom 20px
    .glyphicon
      display inline-block
      vertical-align top
      font-size 16px
      line-height 1em
      margin 0 10px 10px

  &__options
    text-align center
    padding 40px 0 5px
    .btn
      color #1d1d1d
      font-size 12px
      line-height 1em
      font-weight 500
      text-transform uppercase
      &:hover, &:focus
        color $red-1

  &__view-2
    text-align center
    color #515151
    font-weight 500
    font-size 12px
    line-height 1.25em
    padding 30px 0
    background #f6f6f6
    .glyphicon
      display inline-block
      vertical-align top
      color #252525
      font-size 13px
      margin 0 10px

  &__nav-btn
    color inherit
    text-decoration none
    .fa-angle-left
      margin-right 10px
    .fa-angle-right
      margin-left 10px
    &:hover, &:focus
      color $red-1
