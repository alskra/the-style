.footer
  display table-row
  color #676464
  font-weight 500
  height 0
  background-color #1d1d1d
  p
    &:last-child
      margin 0
  a
    color inherit
    text-decoration none
    &:hover, &:focus
      color $red-1
      text-decoration none
  .social-networks
    margin 10px 0 20px

  &__inner
    padding 25px 0

    &_1
      font-size 12px
      padding-top 8px

  &__name-site
    color #e9e9e9
    font-size 18px
    line-height 1.5
    text-transform uppercase
    text-align center
    margin-bottom 25px
    small
      display block
      font-size 13px
      color #676464
      text-transform none

  &__nav
    color inherit
    line-height 19px
    text-align center
    font-family 'zero-width'
    margin 15px 0 30px

  &__nav-item
    display inline-block
    vertical-align top
    color inherit
    text-decoration none
    font-family $font-family-base
    margin 0 24px
    &:hover, &:focus, &_current
      color $red-1
      text-decoration none